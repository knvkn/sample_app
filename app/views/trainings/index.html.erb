<% provide(:title, 'Мои тренеровки') %><div class="main_data"><div class="datet">Сьогодні: <%= Time.now.strftime("%m/%d/%Y") %></div><h1>Мої тренування:</h1><div class="map_pn"><p><%= @day.strftime("%m/%d/%Y") %></p><div class="back"><%= link_to "< попередній день", :date => @day - 1 %></div><div class="next"><%= link_to "наступний день >", :date => @day + 1 %></div></div><div class="map_pn">	<div class="back">		<% if @previous_training %>			<%= link_to "< попереднє тренування", :date => @previous_training.day %>		<% end %>	</div>	<div class="next">		<% if @next_training %>			<%= link_to "наступне тренування >", :date => @next_training.day %>		<% end %>	</div></div><br><div class="CSSTableGenerator"><table>         <tr>            <td>Назва вправи</td>            <td>Вага</td>            <td>Кількість підходів</td>         </tr><% @message.each do |t| %>			<tr>				<td class="indname"><%= t.training.name %></td>				<td class="inddata"><%= t.weight %></td>				<td class="inddata"><%= t.count %></td>			</tr><% end %></tbody></table></div></div><%= render 'trainings/right_side_bar' %>
<% provide(:title, "Sign in") %>
<h1>Вхід</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Електронна пошта" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.submit "Увійти", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Ви ще не зареєстровані в нас? <%= link_to "Зареєструватись!", signup_path %></p>
  </div>
</div>
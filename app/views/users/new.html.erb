<% provide(:title, 'Sign up') %>
<h1>Реєстрація</h1>

<div class="row">
  <div class="span6 offset3">
  <%= render 'shared/error_messages' %>
    <%= form_for(@user) do |f| %>

      <%= f.label :name, 'Нік' %>
      <%= f.text_field :name %>

      <%= f.label :email, 'Пошта' %>
      <%= f.text_field :email %>

      <%= f.label :password, 'Пароль' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, 'Пароль ще раз' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Тепер я з вами!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
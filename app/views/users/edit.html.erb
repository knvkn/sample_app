<% provide(:title, "Edit user") %>
<h1>Редагування профілю</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Ім'я / Нікнейм" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Електронна пошта" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Пароль ще раз" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Зберегти", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Змінити граватар</a>
  </div>
</div>
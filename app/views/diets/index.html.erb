<% provide(:title, 'Моя дієта') %><div class="main_data"><div class="datet">Сьогодні: <%= Time.now.strftime("%m/%d/%Y") %></div><h1>Мої дієти:</h1><div class="map_pn"><p>Дієта за період: <%= @day.strftime("%m/%d/%Y") %></p><div class="back_day"><%= link_to "попередній день", :date => @day - 1 %></div><div class="next_day"><%= link_to "наступний день", :date => @day + 1 %></div></div><div class="map_pn">	<div class="back_tr">		<% if @previous_item %>			<%= link_to "попередня дієта", :date => @previous_item.day %>		<% end %>	</div>	<div class="next_tr">		<% if @next_item %>			<%= link_to "наступна дієта", :date => @next_item.day %>		<% end %>	</div></div><br><div class="CSSTableGenerator"><table>         <tr>            <td>Назва страви</td>            <td>Вага(гр)</td>            <td>Кількість калорій</td>			<td></td>         </tr><% @message.each do |t| %>			<tr>				<td class="indname"><%= t.name %></td>				<td class="inddata"><%= t.weight %>грам</td>				<td class="inddata"><%= t.calories %>ккал</td>				<td class="close_td"><a class="close_buttons" href="#"></a></td>			</tr><% end %></tbody></table></div></div><%= render 'diets/right_side_bar' %>